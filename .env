# Application
APP_NAME="LocalPulse"
APP_ENV=local
APP_DEBUG=true
APP_KEY=base64:your_app_key_here
APP_URL=http://localhost
APP_TIMEZONE=UTC

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=piclock
DB_USERNAME=root
DB_PASSWORD=

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_NAME=piclock_session

# CORS
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=

# File Uploads
UPLOAD_MAX_SIZE=5120
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp

# Rate Limiting
RATE_LIMIT=100
RATE_LIMIT_WINDOW=60

# Security
JWT_SECRET=your_jwt_secret_change_this_in_production

# Mail (using Mailtrap for development)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="LocalPulse"

# Google Maps API (if used)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
